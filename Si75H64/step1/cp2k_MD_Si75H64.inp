&GLOBAL
  PROJECT Si75H64_300
  RUN_TYPE MD
  IOLEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
!    WFN_RESTART_FILE_NAME Si75H64-RESTART.wfn
    CHARGE 0
    MULTIPLICITY 1
    &MGRID
       CUTOFF [Ry] 300
    &END
    &QS
       METHOD GAPW
       EPS_DEFAULT 1.0E-14
       EXTRAPOLATION ASPC
    &END
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &PRINT 
       &MULLIKEN  OFF
       &END MULLIKEN
       &HIRSHFELD  OFF
       &END HIRSHFELD
    &END
    &SCF
      SCF_GUESS RESTART
      MAX_SCF 60
      EPS_SCF 1.0E-6
      ADDED_MOS  100
       &DIAGONALIZATION  T
         ALGORITHM  STANDARD
       &END DIAGONALIZATION
       &MIXING  T
         METHOD  BROYDEN_MIXING
         ALPHA     0.5
         NBUFFER  8
       &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL
         &PBE
         &END
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF [angstrom] 16
         &END
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 25.0 25.0 25.0
	  PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME OPTIMIZED-Si75H64.xyz
      COORD_FILE_FORMAT XYZ
    &END
    &KIND Si
      ELEMENT Si
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      ELEMENT H
      BASIS_SET ORB DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
  &END SUBSYS 
&END FORCE_EVAL 
&MOTION
 &MD
   ENSEMBLE NVT
   TEMPERATURE [K] 300
   TIMESTEP [fs] 0.5
   STEPS 4000
   &THERMOSTAT
     REGION GLOBAL
     TYPE CSVR
	 &CSVR
	   TIMECON 16
	 &END
   &END THERMOSTAT
 &END
 &PRINT
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY
   &VELOCITIES ON
   &END VELOCITIES
   &FORCES ON
   &END FORCES
   &RESTART
     BACKUP_COPIES 1
     &EACH
       MD 1
     &END EACH
   &END RESTART
 &END PRINT 
&END 
